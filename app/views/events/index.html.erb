<div class="container">
  <div class="bg-info text-light p-5 mt-3 mb-3">
    <h1>All Events</h1>
  </div>
  <% if @upcoming.any? %>
    <h2>Upcoming Events</h2>
    <div class="d-flex flex-wrap">
    <% @upcoming.each do |event| %>
      <%= render partial: 'event_card',:locals => { :event => event } %>
    <% end %>
    </div>
  <% end %>

  <% if @past.any? %>
    <h2>Past Events</h2>
    <div class="d-flex flex-wrap">
      <% @past.each do |event| %>
        <%= render partial: 'event_card',:locals => { :event => event } %>
      <% end %>
    </div>
  <% end %>
</div>
