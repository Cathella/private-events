<div class="container">
  <%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :time, as: :date, html5: true %>
        <br>
        <%= f.button :submit %>
    </div>
  <% end %>

</div>
